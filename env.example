# Database Configuration
DB_HOST=localhost
DB_NAME=ellaflowergarden
DB_USER=root
DB_PASS=

# Email Configuration
EMAIL_FROM_NAME=Flower Garden Hotels
EMAIL_FROM_EMAIL=noreply@flowergarden.com
EMAIL_REPLY_TO=support@flowergarden.com

# Website URLs
WEBSITE_URL=http://localhost/flowergarden
MY_RESERVATIONS_URL=http://localhost/flowergarden/my_reservations.php
